<?php
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $name = $_POST["name"];
    $institution = $_POST["institution"];
    $phone = $_POST["phone"];
    $voucher = $_POST["voucher_type"];
    $message = $_POST["message"];

    $entry = "$name|$institution|$phone|$voucher|$message\n";
    file_put_contents("requests.txt", $entry, FILE_APPEND);

    echo "Thank you! Your request has been submitted.";
}
?>
